<Window x:Class="book_store.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:book_store"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border Width="400" Height="300" Background="#FFBF7636" CornerRadius="20">
            <StackPanel>
            <Border Width="350" Height="50" VerticalAlignment="Top" Background="#A65C32" CornerRadius="0 0 20 20" Margin="0 0 0 80">
                <TextBlock Text="PITERBOOKS" Foreground="White" FontSize="20" HorizontalAlignment="Center"/>
            </Border>
            
                <Button Content="Вход" Margin="10" Width="100" Height="20" Click="Button_Click">
                    <Button.Background>
                        <ImageBrush ImageSource="/images/Rectangle 7.png"/>
                    </Button.Background>
                </Button>
                <Button Content="Регистроация"  Width="100" Height="20"/>

            </StackPanel>
            
        </Border>
    </Grid>
</Window>
