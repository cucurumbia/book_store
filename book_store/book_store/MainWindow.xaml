<Window x:Class="book_store.MainWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:book_store"
        mc:Ignorable="d"
        Title="MainWindow1" Height="1024" Width="1440">
    <Grid>
        <Border Width="676" Height="558" Background="#FFBF7636" CornerRadius="20" Margin="200,77,200,57">
            <Grid>
                <Border Width="584" Height="92.8" VerticalAlignment="Top" Background="#A65C32" CornerRadius="0 0 20 20" Margin="0 0 0 80">
                    <TextBlock Text="PITERBOOKS" Foreground="White" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontFamily="Jokerman"/>
                </Border>

                <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Height="126" Margin="0,196,0,0" Width="202" >
                    <Border Width="202" Height="47" BorderThickness="1,1,1,1" CornerRadius="25" Background="#FF402A25" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Button Content="Вход" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  FontSize="24" FontFamily="Arial Rounded MT Bold" Margin="1,-1,-1,1"/>
                    </Border>
                    <Border Width="202" Height="47" BorderThickness="1,1,1,1" CornerRadius="25" Background="#FF402A25" VerticalAlignment="Bottom">
                        <Button Content="Регистрация" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  FontSize="24" FontFamily="Arial Rounded MT Bold" Margin="1,-1,-1,1"/>
                    </Border>
                </Grid>




            </Grid>

        </Border>
    </Grid>
</Window>
